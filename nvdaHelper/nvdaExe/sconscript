Import('env')

import distutils.sysconfig

env=env.Clone()
env.Append(CPPDEFINES='MS_WINDOWS')

NVDAMainProgram=env.Program(
	target='nvda',
	source=[env['projectResFile'],
		'nvda.c',
		'common.c',
	],
	LIBS=[
		env.Glob(Dir(distutils.sysconfig.project_base).Path+"/libs/python*.lib")[0],
		'user32',
		'imagehlp',
		'shlwapi'],
	)

Return('NVDAMainProgram')
